{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "data_path": {
      "type": "string",
      "description": "The path of the data, either as a directory or a zip file."
    },
    "filelist_path": {
      "type": "string",
      "description": "The path of the metadata file."
    },
    "scans_path": {
      "type": "string",
      "description": "The path where to save or read processed scans."
    },
    "use_scans_path": {
      "type": "boolean",
      "description": "Whether to use the scans path."
    },
    "factor_name": {
      "type": "string",
      "description": "The factor name that decides the samples."
    },
    "qc_label": {
      "type": "string",
      "description": "The quality control label in the samples."
    },
    "galaxy": {
      "type": "object",
      "description": "Galaxy workflow running configuration.",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether to enable Galaxy workflow running."
        },
        "api_key": {
          "type": "string",
          "description": "The Galaxy API key."
        },
        "history_name": {
          "type": "string",
          "description": "The created history name."
        }
      }
    },
    "skip_processing": {
      "type": "boolean",
      "description": "Whether to skip data processing."
    },
    "output_directory": {
      "type": "string",
      "description": "The output directory path."
    },
    "process_scans": {
      "type": "object",
      "description": "Process scans step configuration.",
      "properties": {
        "function_noise": {
          "type": "string"
        },
        "snr_thres": {
          "type": "number"
        },
        "ppm": {
          "type": "number"
        },
        "min_fraction": {
          "type": "number"
        },
        "min_scans": {
          "type": "integer"
        }
      },
      "required": [
        "function_noise",
        "snr_thres",
        "ppm",
        "min_fraction",
        "min_scans"
      ]
    },
    "replicate_filter": {
      "type": "object",
      "description": "Replicate filter scans configuration.",
      "properties": {
        "replicates": {
          "type": "integer"
        },
        "min_peaks": {
          "type": "integer"
        },
        "ppm": {
          "type": "number"
        },
        "rsd_thres": {
          "type": "null"
        }
      },
      "required": [
        "replicates",
        "min_peaks",
        "ppm",
        "rsd_thres"
      ]
    },
    "align_samples": {
      "type": "object",
      "description": "Align samples step configuration.",
      "properties": {
        "ppm": {
          "type": "number"
        }
      },
      "required": [
        "ppm"
      ]
    },
    "blank_filter": {
      "type": "object",
      "description": "Blank filter step configuration",
      "properties": {
        "label": {
          "type": "string"
        },
        "min_fold_change": {
          "type": "number"
        },
        "min_fraction": {
          "type": "number"
        },
        "function": {
          "type": "string"
        }
      },
      "required": [
        "label",
        "min_fold_change",
        "min_fraction",
        "function"
      ]
    },
    "sample_filter": {
      "type": "object",
      "description": "Sample filter step configuration.",
      "properties": {
        "min_fraction": {
          "type": "number"
        }
      },
      "required": [
        "min_fraction"
      ]
    },
    "imputation": {
      "type": "object",
      "description": "Missing values imputation configuration.",
      "properties": {
        "neighbours": {
          "type": "integer"
        },
        "feature_max": {
          "type": "number"
        },
        "sample_max": {
          "type": "number"
        }
      },
      "required": [
        "neighbours",
        "feature_max",
        "sample_max"
      ]
    },
    "normalisation": {
      "type": "object",
      "description": "Normalisation step configuration.",
      "properties": {
        "type": {
          "type": "string"
        },
        "qc_label": {
          "type": "string"
        },
        "factor_name": {
          "type": "string"
        },
        "scaling_factor": {
          "type": "number"
        }
      },
      "required": [
        "type"
      ]
    },
    "transform": {
      "type": "object",
      "description": "Transform step configuration.",
      "properties": {
        "type": {
          "type": "string"
        },
        "qc_label": {
          "type": "string"
        },
        "factor_name": {
          "type": "string"
        },
        "base": {
          "type": "integer"
        },
        "root": {
          "type": "integer"
        }
      },
      "required": [
        "type"
      ]
    },
    "scaling": {
      "type": "object",
      "description": "Scaling step configuration.",
      "properties": {
        "type": {
          "type": "string"
        }
      },
      "required": [
        "type"
      ]
    },
    "t_test": {
      "type": "object",
      "description": "t-test configuration.",
      "properties": {
        "alpha": {
          "type": "number"
        }
      }
    }
  }
}
